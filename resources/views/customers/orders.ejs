<section class="orders light-section">
    <div class="container mx-auto pt-12">
        <h1 class="font-bold text-lg mb-4">All orders</h1>
        <% if(messages.success) { %>
            <div class="flex items-center bg-green-500 text-white text-sm font-bold px-4 py-3" 
            id="success-alert" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px"
                    width="30" height="30"
                    viewBox="0 0 50 50"
                    style=" fill:#fff;">
                    <path d="M 25 2 C 12.317 2 2 12.317 2 25 C 2 37.683 12.317 48 25 48 C 37.683 48 48 37.683 48 25 C 48 20.44 46.660281 16.189328 44.363281 12.611328 L 42.994141 14.228516 C 44.889141 17.382516 46 21.06 46 25 C 46 36.579 36.579 46 25 46 C 13.421 46 4 36.579 4 25 C 4 13.421 
                    13.421 4 25 4 C 30.443 4 35.393906 6.0997656 39.128906 9.5097656 L 40.4375 7.9648438 C 36.3525 4.2598437 30.935 2 25 2 z M 43.236328 7.7539062 L 23.914062 30.554688 L 15.78125 22.96875 L 14.417969 24.431641 L 24.083984 33.447266 L 44.763672 9.046875 L 43.236328 7.7539062 z"></path>
                </svg>    
                <p class="ml-4"><%=messages.success%></p>
            </div>    
        <% } %>
        
        <table class="w-full table-auto">
            <thead>
                <tr>
                    <th class="py=2 px-4 text-left">Orders</th>
                    <th class="py=2 px-4 text-left">Phone</th>
                    <th class="py=2 px-4 text-left">Address</th>
                    <th class="py=2 px-4 text-left">Time</th>
                </tr>
            </thead>
            <tbody>
                <% if(orders.length) { %>
                    <% orders.forEach((order) => { %>
                        <tr>
                            <td class="border px-4 py-2">
                                <a class="link" href="/customer/orders/<%=order._id%>"><%=order._id%></a>
                            </td>
                            <td class="border px-4 py-2">
                                <%=order.phone %>
                            </td>
                            <td class="border px-4 py-2">
                                <%=order.address%>
                            </td>
                            <td class="border px-4 py-2">
                                <%=moment(order.createdAt).format("hh:mm A")%>
                            </td>
                        </tr>
                    <% }) %>
                
                <% } else { %>
                    <tr>
                        <td class="p-4"><span>No orders found!</span></td>
                    </tr>
                <% } %>
            </tbody>
        </table>

    </div>
</section>