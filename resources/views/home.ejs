<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Need friends at home?</em></h6>
            <h1 class="text-6xl font-bold">Bring some Plants!</h1>
            <button class="py-3 px-4 rounded-full text-white font-bold mt-6 btn-primary">Order Now</button>
        </div>
        <div class="w-1/2">
            <img class="homepage" src="/img/homepage.png" alt="">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">

    <h1 class="text-xl font-bold mb-8">All Plants</h1>

    <div class="grid grid-cols-4 gap-x-40 gap-y-16">

        <% plants.forEach((plant)=> { %>
            <div class="w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= plant.image%>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%=plant.name%></h2>
                    <span class="size py-1 px-4 rounded-full uppercase text-xs"><%=plant.type%></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">Rs <%=plant.price%></span>
                        <button data-plant="<%= JSON.stringify(plant)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center">   <!-- plant=>object -> thus convert into string-->
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>

</section>